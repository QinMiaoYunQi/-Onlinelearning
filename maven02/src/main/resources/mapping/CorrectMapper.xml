<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.javen.dao.CorrectDao" >
    <select id="SelectCount"  resultType="java.lang.Integer" >
        SELECT count(*) FROM point;
    </select>

    <select id="selectAll" resultType="com.javen.model.Correct" parameterType="java.util.Map">
        select * from point where workName=#{title}
        limit #{start},#{limit}
    </select>

    <update id="update" parameterType="com.javen.model.Correct">
        update point set point = #{point} where id = #{id}
    </update>
</mapper>
